<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/root_relative_layout">

    <View android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:background="@drawable/outer_circle"
        android:id="@+id/outer_circle_view_drawing" />

    <View android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerInParent="true"
        android:id="@+id/outer_circle_view_margin" />


    <View android:layout_width="80dp"
        android:layout_height="80dp"
        android:translationZ="5dp"
        android:elevation="3dp"
        android:layout_centerInParent="true"
        android:background="@drawable/inner_circle"
        android:id="@+id/inner_circle_view"/>
</RelativeLayout>